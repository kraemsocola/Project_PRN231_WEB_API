                                                <ul class="products seese-related-product-slider owl-carousel" data-loop=false data-nav=true data-dots=true data-autoplay=false data-items=5>
                                                    @foreach (var item in listP)
                                                    {
                                                        <li class="pd-2wh post-370 product type-product status-publish has-post-thumbnail product_cat-part-and-parcel product_cat-essentials product_tag-decor  instock taxable shipping-taxable purchasable product-type-simple">
